          <nav>
          <a href="Index.html"><img src="../images/logo.png" height="80" width="80" /></a>
          </nav>
        </div>
      </div>
      <script type="text/javascript">
        var theAmount = 5;
        var theBankAccount = {
          banknumber: 'G01',
          owner: 'Methhead Larry',
          balance: 100,
          deposit: function() {
            this.balance += theAmount;
            document.accountInfo.currentbalance.value=this.balance;
          },
          withdraw: function() {
            this.balance -= theAmount;
            document.accountInfo.currentbalance.value=this.balance;
          }
        };
      </script>
</head>
<style>
    .heading {
        color: #D5A32A;   
    }

    body{
        background-color: #AEBEF2;
        font-family: 'Dancing Script', cursive;
    }
</style>
<body onLoad="document.accountInfo.currentbalance.value=theBankAccount.balance;">
    <h2>Bank Account of <script type="text/javascript">document.write(theBankAccount.owner)</script></h2>
    <form name="accountInfo">
      <input type="text" name="currentbalance"><br>
      <input type="button" value="Deposit $5" onClick="theBankAccount.deposit();">
      <input type="button" value="Withdraw $5" onClick="theBankAccount.withdraw();">
    </form>
</body>
